<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvFoundPageName"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivFoundPageLogo"
            android:layout_toEndOf="@+id/ivFoundPageLogo" />

        <ImageView
            android:id="@+id/ivFoundPageLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_column="3"
            android:layout_row="0"/>

        <TextView
            android:id="@+id/tvFoundArticleHeadline"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFoundPageName"
            android:layout_toEndOf="@+id/ivFoundPageLogo"
            android:layout_toRightOf="@+id/ivFoundPageLogo"
            android:paddingLeft="30dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </RelativeLayout>

</GridLayout>